<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/up11"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:adjustViewBounds="false"
        android:background="@drawable/upgrade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/upImage"
        android:layout_width="76dp"
        android:layout_height="93dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/up11"
        app:layout_constraintTop_toTopOf="@+id/up11"
        app:srcCompat="@drawable/songokukid" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Son Goku Enfant"
        android:textColor="#FFEE55"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/upImage"
        app:layout_constraintTop_toTopOf="@+id/up11" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/up11"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/up11"
        app:layout_constraintStart_toEndOf="@+id/upImage"
        app:srcCompat="@drawable/ball1" />

    <TextView
        android:id="@+id/dbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="50dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/up11"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/up11"
        app:layout_constraintStart_toEndOf="@+id/upImage"
        app:srcCompat="@drawable/ball1" />

    <TextView
        android:id="@+id/nbUp"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="27dp"
        android:text="100"
        android:textColor="#A1FFFFFF"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/up11"
        app:layout_constraintEnd_toEndOf="@+id/up11"
        app:layout_constraintTop_toTopOf="@+id/up11"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>